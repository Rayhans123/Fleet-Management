<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.FAQs">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/primary"
        android:text="Frequently Asked Questions"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="12dp"
        android:textColor="@color/secondary"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/my_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                android:orientation="vertical"
                android:backgroundTint="@color/secondary">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Question1ID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="12dp"
                            android:layout_marginBottom="10dp"
                            android:text="Question1"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />
                        <TextView
                            android:id="@+id/Answer1ID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:paddingStart="12dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Question2ID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="12dp"
                            android:layout_marginBottom="10dp"
                            android:text="Question2"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />
                        <TextView
                            android:id="@+id/Answer2ID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:paddingStart="12dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Question3ID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="12dp"
                            android:layout_marginBottom="10dp"
                            android:text="Question3"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />
                        <TextView
                            android:id="@+id/Answer3ID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:paddingStart="12dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Question4ID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="12dp"
                            android:layout_marginBottom="10dp"
                            android:text="Question4"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />
                        <TextView
                            android:id="@+id/Answer4ID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:paddingStart="12dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>





                </LinearLayout>
            </LinearLayout>


        </ScrollView>
    </androidx.drawerlayout.widget.DrawerLayout>



</LinearLayout>