<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:backgroundTint="@color/secondary"
    android:id="@+id/FrameLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:backgroundTint="@color/secondary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                        android:id="@+id/modelDescriptionID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="monospace"
                        android:text="model Description"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />
                    <TextView
                        android:id="@+id/plateNumberID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="monospace"
                        android:text="plate Number"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                    <ImageView
                        android:id="@+id/ImageID"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="190dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="monospace"
                        android:paddingStart="12dp"
                        android:background="@drawable/truck"
                        android:text="plate Number"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:text="Edit Vehicle Photo"
                    android:id="@+id/editPhoto"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="SmallSp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:text="Assign Vehicle To Driver"
                    android:id="@+id/assignDriver"
                    android:background="@drawable/round_btn"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="SmallSp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:text="Delete Vehicle From Garage"
                    android:id="@+id/deleteVehicle"
                    android:background="@drawable/round_corner_delete"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="SmallSp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:orientation="horizontal">


                </LinearLayout>


                </LinearLayout>


                </LinearLayout>



    </ScrollView>


</FrameLayout>